@model List<MercadoLivre.Web.Models.Produto>
@{
    ViewData["Title"] = "Início";
    var categorias = ViewBag.Categorias as List<MercadoLivre.Web.Models.Categoria>;
}

<div class="bg-ml p-4 rounded mb-4">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h1 class="display-4 text-dark mb-3">Bem-vindo ao MercadoLivre</h1>
            <p class="lead text-dark">Encontre milhares de produtos com os melhores preços e condições de pagamento.</p>
            <a asp-controller="Home" asp-action="Buscar" class="btn btn-ml btn-lg">
                <i class="bi bi-search"></i> Explorar Produtos
            </a>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-lightning-fill text-primary" style="font-size: 8rem;"></i>
        </div>
    </div>
</div>

@if (categorias?.Any() == true)
{
    <div class="mb-5">
        <h3 class="mb-4 text-center">Categorias em Destaque</h3>
        <div class="row justify-content-center">
            @foreach (var categoria in categorias)
            {
                <div class="col-auto mb-3">
                    <a asp-controller="Produtos" asp-action="Categoria" asp-route-categoria="@categoria.Nome" class="text-decoration-none">
                        <div class="card text-center categoria-card">
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(categoria.ImagemUrl))
                                {
                                    <img src="@categoria.ImagemUrl" class="img-fluid mb-3" alt="@categoria.Nome" style="height: 50px; max-width: 50px;">
                                }
                                else
                                {
                                    <i class="bi bi-grid-3x3-gap-fill text-primary mb-3" style="font-size: 2.5rem;"></i>
                                }
                                <h6 class="card-title">@categoria.Nome</h6>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
}

@if (Model?.Any() == true)
{
    <div class="mb-5">
        <h3 class="mb-4">Produtos em Promoção</h3>
        <div class="row">
            @foreach (var produto in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-12">
                    <div class="card card-produto shadow-sm">
                        <a asp-controller="Produtos" asp-action="Detalhes" asp-route-id="@produto.Id" class="text-decoration-none">
                            @if (!string.IsNullOrEmpty(produto.ImagemPrincipal))
                            {
                                <img src="@produto.ImagemPrincipal" class="card-img-top" alt="@produto.Nome">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                        </a>
                        <div class="card-body">
                            <h6 class="card-title mb-2">
                                <a asp-controller="Produtos" asp-action="Detalhes" asp-route-id="@produto.Id" class="text-decoration-none text-dark">
                                    @produto.Nome
                                </a>
                            </h6>
                            
                            <div class="mt-auto">
                                @if (produto.PrecoOriginal.HasValue)
                                {
                                    <span class="desconto mb-1 d-inline-block">@produto.PercentualDesconto% OFF</span>
                                    <div class="preco-original small">@produto.PrecoOriginal.Value.ToString("C")</div>
                                }
                                <div class="h5 text-ml mb-2">@produto.PrecoComDesconto.ToString("C")</div>
                                
                                @if (produto.TotalAvaliacoes > 0)
                                {
                                    <div class="mb-3">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= produto.MediaAvaliacoes)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-muted"></i>
                                            }
                                        }
                                        <small class="text-muted">(@produto.TotalAvaliacoes)</small>
                                    </div>
                                }
                                
                                <button class="btn btn-ml btn-sm w-100" onclick="adicionarAoCarrinho(@produto.Id)">
                                    <i class="bi bi-cart-plus"></i> Adicionar ao Carrinho
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-box text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">Nenhum produto em promoção no momento</h4>
        <p class="text-muted">Volte em breve para conferir nossas ofertas!</p>
    </div>
}