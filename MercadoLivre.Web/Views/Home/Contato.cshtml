@{
    ViewData["Title"] = "Contato";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold">Entre em Contato</h1>
                <p class="lead text-muted">
                    Estamos aqui para ajudar! Entre em contato conosco através dos canais abaixo.
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        
        <div class="col-lg-8 mb-5">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <h4 class="mb-4">Envie sua Mensagem</h4>
                    
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="nomeCompleto" class="form-label">Nome Completo</label>
                                <input type="text" id="nomeCompleto" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">E-mail</label>
                                <input type="email" id="email" class="form-control" required>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="telefone" class="form-label">Telefone</label>
                                <input type="tel" id="telefone" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="assunto" class="form-label">Assunto</label>
                                <select id="assunto" class="form-select" required>
                                    <option value="">Selecione um assunto</option>
                                    <option value="suporte">Suporte Técnico</option>
                                    <option value="vendas">Dúvidas sobre Vendas</option>
                                    <option value="produto">Problema com Produto</option>
                                    <option value="entrega">Entrega</option>
                                    <option value="pagamento">Pagamento</option>
                                    <option value="outros">Outros</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="mensagem" class="form-label">Mensagem</label>
                            <textarea id="mensagem" class="form-control" rows="5" placeholder="Descreva detalhadamente sua dúvida ou problema..." required></textarea>
                        </div>
                        
                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="privacyCheck" required>
                                <label class="form-check-label" for="privacyCheck">
                                    Concordo com a <a href="#" class="text-decoration-none">Política de Privacidade</a> e autorizo o uso dos meus dados para resposta.
                                </label>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-ml-primary btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Enviar Mensagem
                        </button>
                    </form>
                </div>
            </div>
        </div>

        
        <div class="col-lg-4">
            <div class="row">
                
                <div class="col-12 mb-4">
                    <div class="card border-0 bg-primary text-white h-100">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-headset fa-3x mb-3"></i>
                            <h5>Atendimento ao Cliente</h5>
                            <p class="mb-3">Segunda a Sexta: 8h às 20h<br>Sábado: 8h às 18h</p>
                            <a href="tel:08007700999" class="btn btn-light btn-sm">
                                <i class="fas fa-phone me-2"></i>0800 770 0999
                            </a>
                        </div>
                    </div>
                </div>

                
                <div class="col-12 mb-4">
                    <div class="card border-0 bg-success text-white h-100">
                        <div class="card-body text-center p-4">
                            <i class="fab fa-whatsapp fa-3x mb-3"></i>
                            <h5>WhatsApp</h5>
                            <p class="mb-3">Atendimento rápido e personalizado</p>
                            <a href="https://wa.me/5511999999999" class="btn btn-light btn-sm" target="_blank">
                                <i class="fab fa-whatsapp me-2"></i>Conversar
                            </a>
                        </div>
                    </div>
                </div>

                
                <div class="col-12 mb-4">
                    <div class="card border-0 bg-info text-white h-100">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-envelope fa-3x mb-3"></i>
                            <h5>E-mail</h5>
                            <p class="mb-3">Resposta em até 24 horas</p>
                            <a href="mailto:contato@mercadolivre.com.br" class="btn btn-light btn-sm">
                                <i class="fas fa-envelope me-2"></i>Enviar E-mail
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            
            <div class="card border-0 bg-light">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-question-circle me-2"></i>Perguntas Frequentes
                    </h6>
                    <div class="accordion accordion-flush" id="faqAccordion">
                        <div class="accordion-item bg-transparent">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed bg-transparent" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                    Como rastrear meu pedido?
                                </button>
                            </h2>
                            <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Acesse "Meus Pedidos" na sua conta e acompanhe o status em tempo real.
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item bg-transparent">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed bg-transparent" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                    Como alterar dados da conta?
                                </button>
                            </h2>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Vá em "Meu Perfil" e clique em "Editar informações pessoais".
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item bg-transparent">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed bg-transparent" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                    Política de devolução?
                                </button>
                            </h2>
                            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Você tem até 7 dias para solicitar a devolução de produtos com defeito.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 bg-dark text-white">
                <div class="card-body text-center p-5">
                    <h4 class="mb-4">Siga-nos nas Redes Sociais</h4>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a href="#" class="btn btn-outline-light btn-lg">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="btn btn-outline-light btn-lg">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-outline-light btn-lg">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="btn btn-outline-light btn-lg">
                            <i class="fab fa-youtube"></i>
                        </a>
                        <a href="#" class="btn btn-outline-light btn-lg">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="#" class="btn btn-outline-light btn-lg">
                            <i class="fab fa-tiktok"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('contactForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Simulação de envio
    const button = this.querySelector('button[type="submit"]');
    const originalText = button.innerHTML;
    
    button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Enviando...';
    button.disabled = true;
    
    setTimeout(() => {
        alert('Mensagem enviada com sucesso! Retornaremos em breve.');
        this.reset();
        button.innerHTML = originalText;
        button.disabled = false;
    }, 2000);
});
</script>
