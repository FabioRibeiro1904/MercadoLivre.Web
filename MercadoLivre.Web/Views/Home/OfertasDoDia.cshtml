@model IEnumerable<MercadoLivre.Web.Models.Produto>

@{
    ViewData["Title"] = "Ofertas do Dia";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-5">
                <h1 class="display-4">
                    <i class="fas fa-fire text-danger me-3"></i>
                    Ofertas do Dia
                </h1>
                <p class="lead text-muted">Aproveite os melhores descontos e promoções imperdíveis!</p>
            </div>

            
            <div class="alert alert-warning text-center mb-4" role="alert">
                <i class="fas fa-clock me-2"></i>
                <strong>Ofertas por tempo limitado!</strong> Não perca essas oportunidades incríveis.
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var produto in Model)
                    {
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card product-card h-100 border-0 shadow-sm">
                                <div class="position-relative">
                                    @if (produto.PercentualDesconto.HasValue)
                                    {
                                        <span class="badge bg-danger position-absolute top-0 end-0 m-2 fs-6">
                                            <i class="fas fa-fire me-1"></i>
                                            @produto.PercentualDesconto% OFF
                                        </span>
                                    }
                                    @if (!string.IsNullOrEmpty(produto.ImagemPrincipal))
                                    {
                                        <img src="@produto.ImagemPrincipal" class="card-img-top" alt="@produto.Nome" style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="fas fa-image text-muted fa-3x"></i>
                                        </div>
                                    }
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <small class="text-muted mb-1">@produto.Categoria?.Nome</small>
                                    <h6 class="card-title">@produto.Nome</h6>
                                    <div class="pricing mt-auto">
                                        @if (produto.PrecoOriginal.HasValue && produto.PrecoOriginal > produto.Preco)
                                        {
                                            <small class="text-muted text-decoration-line-through">R$ @produto.PrecoOriginal?.ToString("N2")</small>
                                        }
                                        <h5 class="text-primary mb-2">R$ @produto.Preco.ToString("N2")</h5>
                                        @if (produto.PrecoOriginal.HasValue && produto.PrecoOriginal > produto.Preco)
                                        {
                                            <div class="text-success small fw-bold">
                                                Economia de R$ @((produto.PrecoOriginal - produto.Preco)?.ToString("N2"))
                                            </div>
                                        }
                                    </div>
                                    <div class="d-flex gap-2 mt-3">
                                        <a asp-controller="Produtos" asp-action="Detalhes" asp-route-id="@produto.Id" 
                                           class="btn btn-outline-primary btn-sm flex-fill">
                                            Ver detalhes
                                        </a>
                                        <button class="btn btn-primary btn-sm" 
                                                onclick="adicionarAoCarrinho(@produto.Id)">
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-tags fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Nenhuma oferta disponível no momento</h4>
                    <p class="text-muted">Volte em breve para conferir nossas promoções!</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Voltar à página inicial
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
.product-card {
    transition: all 0.3s ease;
    cursor: pointer;
}

.product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
}

.product-card:hover .card-title {
    color: #3483fa;
}

.pricing h5 {
    font-size: 1.3rem;
    font-weight: bold;
}

.badge {
    font-size: 0.8rem !important;
    padding: 0.5rem 0.75rem;
}
</style>
