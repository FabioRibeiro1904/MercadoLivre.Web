@model List<Categoria>
@{
    ViewData["Title"] = "Todas as Categorias";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4 text-center">Todas as Categorias</h1>
            <p class="text-center text-muted mb-5">Explore nossos produtos por categoria</p>
        </div>
    </div>

    @if (Model?.Any() == true)
    {
        <div class="row justify-content-center">
            @foreach (var categoria in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <a asp-controller="Produtos" asp-action="Categoria" asp-route-categoria="@categoria.Nome" class="text-decoration-none">
                        <div class="card h-100 text-center categoria-card-large">
                            <div class="card-body d-flex flex-column justify-content-center">
                                @if (!string.IsNullOrEmpty(categoria.ImagemUrl))
                                {
                                    <img src="@categoria.ImagemUrl" class="img-fluid mb-3 mx-auto" alt="@categoria.Nome" style="height: 80px; max-width: 80px;">
                                }
                                else
                                {
                                    <i class="bi bi-grid-3x3-gap-fill text-primary mb-3" style="font-size: 4rem;"></i>
                                }
                                <h4 class="card-title mb-2">@categoria.Nome</h4>
                                <p class="card-text text-muted">@categoria.Descricao</p>
                                
                                @{
                                    var totalProdutos = categoria.Produtos?.Count(p => p.Ativo) ?? 0;
                                }
                                <small class="text-muted mt-auto">
                                    @totalProdutos @(totalProdutos == 1 ? "produto" : "produtos") disponível@(totalProdutos == 1 ? "" : "eis")
                                </small>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3">Nenhuma categoria encontrada</h3>
            <p class="text-muted">Não há categorias disponíveis no momento.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-house"></i> Voltar ao Início
            </a>
        </div>
    }

    <div class="text-center mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Voltar ao Início
        </a>
    </div>
</div>
