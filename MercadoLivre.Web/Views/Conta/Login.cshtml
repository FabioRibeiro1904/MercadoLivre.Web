@{
    ViewData["Title"] = "Login";
    Layout = null; // Usar layout simplificado para login
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MercadoLivre</title>
    
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/mercadolivre.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <div class="container-fluid">
        <div class="row min-vh-100">
            
            <div class="col-lg-7 d-none d-lg-flex align-items-center justify-content-center" 
                 style="background: linear-gradient(135deg, #3483fa 0%, #2968c8 100%);">
                <div class="text-white text-center">
                    <i class="fas fa-shopping-cart fa-5x mb-4"></i>
                    <h1 class="display-4 fw-bold mb-4">MercadoLivre</h1>
                    <p class="lead mb-4">Sua plataforma de compras online favorita</p>
                    <div class="row text-center">
                        <div class="col-4">
                            <i class="fas fa-shield-alt fa-2x mb-2"></i>
                            <div>Compra Protegida</div>
                        </div>
                        <div class="col-4">
                            <i class="fas fa-truck fa-2x mb-2"></i>
                            <div>Frete Grátis</div>
                        </div>
                        <div class="col-4">
                            <i class="fas fa-credit-card fa-2x mb-2"></i>
                            <div>Parcele sem Juros</div>
                        </div>
                    </div>
                </div>
            </div>

            
            <div class="col-lg-5 d-flex align-items-center justify-content-center">
                <div class="w-100" style="max-width: 400px;">
                    <div class="text-center mb-4">
                        <h2 class="h3 fw-bold">Entrar na sua conta</h2>
                        <p class="text-muted">Digite seus dados para acessar</p>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Erro))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i> @ViewBag.Erro
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">E-mail:</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input type="email" name="email" id="email" class="form-control form-control-lg" 
                                       placeholder="seu@email.com" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="senha" class="form-label">Senha:</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" name="senha" id="senha" class="form-control form-control-lg" 
                                       placeholder="Sua senha" required>
                                <button class="btn btn-outline-secondary" type="button" id="toggle-password">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="lembrar">
                            <label class="form-check-label" for="lembrar">
                                Lembrar de mim
                            </label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-ml-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Entrar
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a href="#" class="text-decoration-none">Esqueceu sua senha?</a>
                    </div>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-3">Ainda não tem uma conta?</p>
                        <a asp-action="Registro" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-user-plus"></i> Criar conta
                        </a>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">
                            <i class="fas fa-arrow-left"></i> Voltar ao início
                        </a>
                    </div>

                    
                    <div class="mt-4 p-3 bg-light rounded">
                        <h6 class="text-center mb-3">Contas de demonstração:</h6>
                        <div class="row text-center">
                            <div class="col-6">
                                <small class="text-muted">
                                    <strong>Admin:</strong><br>
                                    admin@mercadolivre.com<br>
                                    admin123
                                </small>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">
                                    <strong>Cliente:</strong><br>
                                    user@example.com<br>
                                    user123
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Toggle password visibility
            $('#toggle-password').on('click', function() {
                const senhaInput = $('#senha');
                const icon = $(this).find('i');
                
                if (senhaInput.attr('type') === 'password') {
                    senhaInput.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    senhaInput.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Form validation
            $('form').on('submit', function(e) {
                const email = $('#email').val();
                const senha = $('#senha').val();

                if (!email || !senha) {
                    e.preventDefault();
                    alert('Por favor, preencha todos os campos.');
                    return;
                }

                // Simple email validation
                if (email.indexOf('@@') === -1 || email.indexOf('.') === -1) {
                    e.preventDefault();
                    alert('Por favor, digite um e-mail válido.');
                    return;
                }
            });

            // Demo account quick fill  
            $('.text-muted small').on('click', function() {
                var text = $(this).text();
                if (text.indexOf('admin') !== -1) {
                    $('#email').val('admin@@mercadolivre.com');
                    $('#senha').val('admin123');
                } else if (text.indexOf('user') !== -1) {
                    $('#email').val('user@@example.com');
                    $('#senha').val('user123');
                }
            });
        });
    </script>
</body>
</html>
