@model List<Pedido>
@{
    ViewData["Title"] = "Meus Pedidos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-bag"></i> Meus Pedidos
        </h1>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Voltar ao Início
        </a>
    </div>

    @if (Model?.Any() == true)
    {
        <div class="row">
            @foreach (var pedido in Model.OrderByDescending(p => p.DataPedido))
            {
                <div class="col-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">
                                    <strong>Pedido #@pedido.NumeroPedido</strong>
                                </h6>
                                <small class="text-muted">
                                    Realizado em @pedido.DataPedido.ToString("dd/MM/yyyy 'às' HH:mm")
                                </small>
                            </div>
                            <div class="text-end">
                                @{
                                    var statusClass = pedido.Status switch
                                    {
                                        StatusPedido.Pendente => "bg-warning",
                                        StatusPedido.Confirmado => "bg-primary",
                                        StatusPedido.Enviado => "bg-info",
                                        StatusPedido.Entregue => "bg-success",
                                        StatusPedido.Cancelado => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">@pedido.Status</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6 class="text-muted mb-2">Itens do Pedido:</h6>
                                    @if (pedido.Itens?.Any() == true)
                                    {
                                        @foreach (var item in pedido.Itens)
                                        {
                                            <div class="d-flex align-items-center mb-2">
                                                <small class="me-2">
                                                    <strong>@item.Quantidade x</strong> @item.NomeProduto
                                                </small>
                                                <small class="ms-auto text-muted">
                                                    @item.PrecoUnitario.ToString("C")
                                                </small>
                                            </div>
                                        }
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(pedido.EnderecoEntrega))
                                    {
                                        <div class="mt-3">
                                            <h6 class="text-muted mb-1">Endereço de Entrega:</h6>
                                            <small>
                                                @pedido.EnderecoEntrega<br>
                                                @pedido.CidadeEntrega/@pedido.EstadoEntrega - CEP: @pedido.CEPEntrega
                                            </small>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <div class="mb-2">
                                        <small class="text-muted">Forma de Pagamento:</small><br>
                                        <small>
                                            @(pedido.FormaPagamento switch
                                            {
                                                FormaPagamento.CartaoCredito => "Cartão de Crédito",
                                                FormaPagamento.CartaoDebito => "Cartão de Débito",
                                                FormaPagamento.Pix => "PIX",
                                                FormaPagamento.Boleto => "Boleto Bancário",
                                                _ => "Não informado"
                                            })
                                        </small>
                                    </div>
                                    
                                    @if (pedido.ValorFrete > 0)
                                    {
                                        <div class="mb-1">
                                            <small class="text-muted">Frete: @pedido.ValorFrete.ToString("C")</small>
                                        </div>
                                    }
                                    
                                    <div class="mb-3">
                                        <strong class="text-success">
                                            Total: @((pedido.ValorTotal + pedido.ValorFrete).ToString("C"))
                                        </strong>
                                    </div>

                                    @if (pedido.Status == StatusPedido.Pendente)
                                    {
                                        <button class="btn btn-sm btn-outline-danger" onclick="cancelarPedido('@pedido.NumeroPedido')">
                                            <i class="bi bi-x-circle"></i> Cancelar
                                        </button>
                                    }
                                    
                                    @if (pedido.Status == StatusPedido.Confirmado || pedido.Status == StatusPedido.Preparando || pedido.Status == StatusPedido.Enviado)
                                    {
                                        <button class="btn btn-sm btn-primary" onclick="avancarStatus(@pedido.Id)" id="btn-@pedido.Id">
                                            <i class="bi bi-arrow-right-circle"></i> Simular Próximo Status
                                        </button>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(pedido.CodigoRastreamento))
                                    {
                                        <div class="mt-2">
                                            <small class="text-muted">Código de Rastreamento:</small><br>
                                            <small class="fw-bold">@pedido.CodigoRastreamento</small>
                                        </div>
                                    }
                                    @if (pedido.Status == StatusPedido.Entregue)
                                    {
                                        <a href="#" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-star"></i> Avaliar
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <nav aria-label="Navegação de pedidos">
                <!-- Aqui poderia ser implementada paginação se necessário -->
            </nav>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-bag-x text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3">Você ainda não fez nenhum pedido</h3>
            <p class="text-muted">Que tal começar suas compras agora?</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-shop"></i> Ir às Compras
            </a>
        </div>
    }
</div>

<script>
        function cancelarPedido(pedidoId) {
            if (confirm('Tem certeza que deseja cancelar este pedido?')) {
                alert('Aqui seria implementada a funcionalidade de cancelamento');
            }
        }
        
        function avancarStatus(pedidoId) {
            const botao = document.getElementById(`btn-${pedidoId}`);
            if (botao) {
                botao.disabled = true;
                botao.innerHTML = '<i class="bi bi-hourglass-split"></i> Processando...';
            }
            
            $.ajax({
                url: '@Url.Action("SimularProximoStatus", "Conta")',
                type: 'POST',
                data: { pedidoId: pedidoId },
                success: function(response) {
                    if (response.sucesso) {
                        alert(`Status atualizado para: ${response.novoStatus}`);
                        location.reload();
                    } else {
                        alert(response.mensagem);
                        if (botao) {
                            botao.disabled = false;
                            botao.innerHTML = '<i class="bi bi-arrow-right-circle"></i> Simular Próximo Status';
                        }
                    }
                },
                error: function() {
                    alert('Erro ao atualizar status do pedido.');
                    if (botao) {
                        botao.disabled = false;
                        botao.innerHTML = '<i class="bi bi-arrow-right-circle"></i> Simular Próximo Status';
                    }
                }
            });
        }
</script>
