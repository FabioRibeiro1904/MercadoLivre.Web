<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MercadoLivre</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- CSS Customizado -->
    <link rel="stylesheet" href="~/css/mercadolivre.css" asp-append-version="true" />
</head>
<body>
    <header class="header-container">
        <!-- Top Bar -->
        <div class="top-bar bg-light py-1">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <i class="fas fa-map-marker-alt"></i>
                            Enviar para São Paulo 01310-100
                        </small>
                    </div>
                    <div class="col-md-6 text-end">
                        <div class="user-menu">
                            @if (Context.Session.GetString("UsuarioNome") != null)
                            {
                                <div class="dropdown d-inline-block">
                                    <a href="#" class="dropdown-toggle text-decoration-none text-dark" data-bs-toggle="dropdown">
                                        <i class="fas fa-user-circle"></i>
                                        Olá, @Context.Session.GetString("UsuarioNome")
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Conta" asp-action="Perfil">
                                            <i class="fas fa-user"></i> Minha conta
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Conta" asp-action="MeusPedidos">
                                            <i class="fas fa-shopping-bag"></i> Meus pedidos
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Conta" asp-action="Logout">
                                            <i class="fas fa-sign-out-alt"></i> Sair
                                        </a></li>
                                    </ul>
                                </div>
                                <span class="text-muted mx-2">|</span>
                                <span class="text-success">
                                    <i class="fas fa-wallet"></i> 
                                    Saldo: R$ @Context.Session.GetString("UsuarioSaldo")
                                </span>
                            }
                            else
                            {
                                <a asp-controller="Conta" asp-action="Registro" class="text-decoration-none text-dark">
                                    Crie sua conta
                                </a>
                                <span class="text-muted mx-2">|</span>
                                <a asp-controller="Conta" asp-action="Login" class="text-decoration-none text-dark">
                                    Entre
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Header -->
        <div class="main-header bg-primary py-3">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Logo -->
                    <div class="col-md-2">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                            <h2 class="text-white mb-0">
                                <i class="fas fa-shopping-cart"></i>
                                MercadoLivre
                            </h2>
                        </a>
                    </div>

                    <!-- Search Bar -->
                    <div class="col-md-7">
                        <form asp-controller="Home" asp-action="Buscar" method="get" class="search-form">
                            <div class="input-group">
                                <input type="text" name="termo" class="form-control search-input" 
                                       placeholder="Buscar produtos, marcas e muito mais..." 
                                       value="@ViewBag.Termo">
                                <button class="btn btn-light search-btn" type="submit">
                                    <i class="fas fa-search text-muted"></i>
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Cart -->
                    <div class="col-md-3 text-end">
                        <a asp-controller="Carrinho" asp-action="Index" class="btn btn-outline-light cart-btn">
                            <i class="fas fa-shopping-cart"></i>
                            Carrinho
                            <span class="badge bg-warning text-dark ms-1" id="cart-count">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="fas fa-bars"></i> Categorias
                            </a>
                            <ul class="dropdown-menu categories-menu">
                                @if (ViewBag.Categorias != null)
                                {
                                    @foreach (var categoria in ViewBag.Categorias)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Produtos" asp-action="Categoria" asp-route-categoria="@categoria.Nome">
                                                @categoria.Nome
                                            </a>
                                        </li>
                                    }
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="TodasCategorias">
                                        <strong>Ver todas as categorias</strong>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="OfertasDoDia">Ofertas do dia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Supermercado">Supermercado</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Moda">Moda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="CentralAjuda">Contato</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="CompraProtegida">
                                <i class="fas fa-shield-alt text-success"></i> Compra Protegida
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <!-- Notifications Container -->
    <div class="notification-container">
        @if (TempData["Sucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show notification-alert" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["Sucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Erro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show notification-alert" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> @TempData["Erro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
    </div>

    <!-- Footer -->
    <footer class="footer bg-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Sobre o MercadoLivre</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Sobre" class="text-decoration-none text-muted">Quem somos</a></li>
                        <li><a href="#" class="text-decoration-none text-muted">Trabalhe conosco</a></li>
                        <li><a href="#" class="text-decoration-none text-muted">Imprensa</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Ajuda</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Contato" class="text-decoration-none text-muted">Contato</a></li>
                        <li><a href="#" class="text-decoration-none text-muted">Como comprar</a></li>
                        <li><a href="#" class="text-decoration-none text-muted">Compra Protegida</a></li>
                        <li><a href="#" class="text-decoration-none text-muted">Central de Ajuda</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Políticas</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="TermosUso" class="text-decoration-none text-muted">Termos de uso</a></li>
                        <li><a asp-controller="Home" asp-action="Privacidade" class="text-decoration-none text-muted">Privacidade</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Redes sociais</h6>
                    <div class="social-links">
                        <a href="#" class="text-decoration-none me-3">
                            <i class="fab fa-facebook fa-lg"></i>
                        </a>
                        <a href="#" class="text-decoration-none me-3">
                            <i class="fab fa-twitter fa-lg"></i>
                        </a>
                        <a href="#" class="text-decoration-none me-3">
                            <i class="fab fa-instagram fa-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="text-muted mb-0">
                        © 2025 MercadoLivre Clone - Projeto educacional desenvolvido com ASP.NET Core MVC
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/mercadolivre.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Atualizar contador do carrinho ao carregar a página
        $(document).ready(function() {
            updateCartCount();
            
            // Auto-dismiss notifications after 5 seconds
            setTimeout(function() {
                $('.notification-alert').fadeOut('slow');
            }, 5000);
        });
    </script>
</body>
</html>
