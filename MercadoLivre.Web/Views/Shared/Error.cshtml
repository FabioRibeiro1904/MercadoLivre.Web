@model ErrorViewModel

@{
    ViewData["Title"] = "Erro";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="error-container">
                <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
                <h1 class="display-4 fw-bold text-dark">Oops!</h1>
                <h2 class="h4 mb-4">Algo deu errado</h2>
                <p class="text-muted mb-4">
                    Desculpe, ocorreu um erro inesperado. Nossa equipe foi notificada e está trabalhando para resolver o problema.
                </p>
                
                @if (Model?.ShowRequestId == true)
                {
                    <div class="alert alert-light" role="alert">
                        <strong>ID da solicitação:</strong> @Model.RequestId
                    </div>
                }
                
                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-ml-primary btn-lg me-3">
                        <i class="fas fa-home"></i> Voltar ao início
                    </a>
                    <button onclick="window.history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </button>
                </div>
                
                <div class="mt-5">
                    <h5>Enquanto isso, que tal explorar:</h5>
                    <div class="row mt-3">
                        <div class="col-6 col-md-3">
                            <a asp-controller="Produtos" asp-action="Categoria" asp-route-categoria="Eletrônicos" class="text-decoration-none">
                                <div class="card border-0 bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-laptop fa-2x text-primary mb-2"></i>
                                        <h6>Eletrônicos</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Produtos" asp-action="Categoria" asp-route-categoria="Roupas e Calçados" class="text-decoration-none">
                                <div class="card border-0 bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-tshirt fa-2x text-primary mb-2"></i>
                                        <h6>Roupas</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Produtos" asp-action="Categoria" asp-route-categoria="Casa e Decoração" class="text-decoration-none">
                                <div class="card border-0 bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-home fa-2x text-primary mb-2"></i>
                                        <h6>Casa</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Produtos" asp-action="Categoria" asp-route-categoria="Esportes e Lazer" class="text-decoration-none">
                                <div class="card border-0 bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-dumbbell fa-2x text-primary mb-2"></i>
                                        <h6>Esportes</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-container {
        padding: 2rem 0;
    }
    
    .error-container .card {
        transition: transform 0.2s ease;
    }
    
    .error-container .card:hover {
        transform: translateY(-2px);
    }
</style>
